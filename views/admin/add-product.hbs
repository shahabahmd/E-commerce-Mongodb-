<section class="product-form-section">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row justify-content-center w-100">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4 text-white fw-bold">‚ûï Add Product</h2>
                    <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                        <div class="form-floating mb-3">
                                  <label for="Name"> Product Name</label>
                            <input type="text" id="Name" name="Name" class="form-control custom-input" placeholder="Enter product name" required>
                      
                        </div>

                        <div class="form-floating mb-3">
                              <label for="Description"> Product Description</label>
                            <textarea id="Description" name="Description" class="form-control custom-input" rows="3" placeholder="Enter product description" required></textarea>
                          
                        </div>

                        <div class="form-floating mb-3">
                                <label for="Price"> Product Price</label>
                            <input type="number" id="Price" name="Price" class="form-control custom-input" placeholder="Enter price" min="0" required>
                        
                        </div>

                        <!-- üîπ Custom File Upload Button -->
                        <div class="mb-3">
    <label class="form-label text-white fw-semibold"> Upload Product Image</label>
    <div class="custom-file-upload">
        <input type="file" id="Image" name="Image" class="custom-file-input" required accept=".jpg,.jpeg,.png">
        <label for="Image" class="btn btn-upload">üìÇ Choose File</label>
        <span id="file-name" class="file-name">No file chosen</span>
        <small id="fileError" class="text-danger"></small>
    </div>
</div>

<script>
    document.getElementById("Image").addEventListener("change", function () {
        let file = this.files[0];
        let fileNameDisplay = document.getElementById("file-name");
        let fileError = document.getElementById("fileError");

        fileError.textContent = ""; // Reset error message

        if (file) {
            let fileType = file.name.split('.').pop().toLowerCase(); // Extract file extension
            fileNameDisplay.textContent = file.name; // Display selected file name

            if (fileType !== "jpg" && fileType !== "jpeg" && fileType !== "png") {
                fileError.textContent = "‚ùå Only JPG and PNG files are allowed!";
                this.value = ""; // Clear the input field
                fileNameDisplay.textContent = "No file chosen"; // Reset file name display
            }
        } else {
            fileNameDisplay.textContent = "No file chosen";
        }
    });
</script>

                        <button type="submit" class="btn btn-glow w-100 mt-3"> Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

