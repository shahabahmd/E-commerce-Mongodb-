<section class="orders-section">
    <div class="container">
        <h1 class="text-center my-4">ðŸ“¦ View Pending Orders</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped align-middle shadow-sm" id="ordersTable">
                <thead>
                    <tr class="text-center">
                        <th>Order ID</th>
                        <th>User Name</th>
                        <th>User ID</th>
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                       
                        <th>Date</th>
                        <th>Action</th> <!-- âœ… Added Action Column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td class="table-text">{{this._id}}</td>
                        <td class="table-text">{{this.userName}}</td>
                        <td class="table-text">{{this.userId}}</td>
                        <td class="text-success fw-bold">â‚¹{{this.totalAmount}}</td>
                        <td class="table-text">{{this.paymentMethod}}</td>
                        <td id="status-{{this._id}}" class="status-badge">{{this.status}}</td>
                      
                        <td class="table-text">{{this.date}}</td>
                        <td id="btn-cell-{{this._id}}">
                            {{#if (eq this.status "placed")}}
                                <button class="btn btn-primary btn-sm" onclick="updateStatus('{{this._id}}')">Mark as Delivered</button>
                            {{else}}
                                <span class="text-success fw-bold">âœ” Delivered</span>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="text-center my-3">
    <a href="/admin/delivered-orders" class="btn btn-success">ðŸ“¦ View Delivered Orders</a>
</div>

    </div>
</section>

<script>
    function updateStatus(orderId) {
        fetch(`/admin/update-order-status/${orderId}`, {
            method: 'POST',
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById(`status-${orderId}`).innerText = "delivered";
                document.getElementById(`delivery-status-${orderId}`).innerHTML = "<span class='text-success fw-bold'>âœ” Delivered</span>";
                document.getElementById(`btn-cell-${orderId}`).innerHTML = "<span class='text-success fw-bold'>âœ” Delivered</span>";
            } else {
                alert("Failed to update status");
            }
        })
        .catch(error => console.error('Error:', error));
    }

    $(document).ready(function () {
        $('#ordersTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "columnDefs": [
                { "orderable": false, "targets": [6, 8] } // Disable sorting on Delivery Status and Action column
            ]
        });
    });
</script>

