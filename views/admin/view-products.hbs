<section class="product-section">
    <div class="container">
        <div class="row mt-4">
            <div class="col text-end">
                <a href="/admin/add-product" class="btn btn-glow shadow-lg px-4 py-2">âž• Add Product</a>
            </div>
        </div>

        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover table-striped align-middle shadow-sm" id="productsTable">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td class="table-text">{{this.Name}}</td>
                        <td class="table-text">{{this.Description}}</td>
                        <td class="text-success fw-bold">â‚¹{{this.Price}}</td>
                        <td class="text-center">
                            <img class="rounded shadow-sm" style="width: 60px; height: 60px; object-fit: cover;" src="/product-images/{{this._id}}.jpg" alt="Product Image">
                        </td>
                        <td class="text-center">
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm px-3 me-2"> Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm px-3" onclick="return confirm('Are you sure you want to delete {{this.Name}}?')"> Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- DataTable Script -->
<script>
    $(document).ready(function () {
        $('#productsTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "columnDefs": [
                { "orderable": false, "targets": [3, 4] }
            ]
        });
    });
</script>

