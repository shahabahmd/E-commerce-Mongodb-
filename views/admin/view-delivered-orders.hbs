<section class="orders-section">
    <div class="container">
        <h1 class="text-center my-4">✅ Delivered Orders</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped align-middle shadow-sm "id="ordersTable">
                <thead>
                    <tr class="text-center">
                        <th>User ID</th>
                        <th>User Name</th>
                        
                        <th>Order ID</th>
                          <th>Product ID(s)</th>
                           
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each deliveredOrders}}
                    <tr>
                         <td class="table-text">{{this.userId}}</td>
                        <td class="table-text">{{this.userName}}</td>
                       
                        <td class="table-text">{{this._id}}</td>
                      
        <td class="table-text">
            {{#each this.productDetails}}
            
                <div>
                    <strong>Product ID:</strong> {{this._id}} <br>
                    <strong>Rating:</strong> ⭐ {{this.rating}}/5 <br>

                </div>
                <hr> <!-- Sekkparate products visually -->
            {{/each}}
        </td>
      

                        <td class="text-success fw-bold">₹{{this.totalAmount}}</td>
                        <td class="table-text">{{this.paymentMethod}}</td>
                        <td class="status-badge text-success fw-bold">✔ Delivered</td>
                        <td class="table-text">{{this.date}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
<script>
      $(document).ready(function () {
        $('#ordersTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "columnDefs": [
                { "orderable": false, "targets": [6, 8] } // Disable sorting on Delivery Status and Action column
            ]
        });
    });

</script>

