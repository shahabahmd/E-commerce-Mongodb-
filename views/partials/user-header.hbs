<header>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Cinzel:wght@700&family=Cormorant+Garamond:wght@700&family=Raleway:wght@700&family=DM+Serif+Display&display=swap" rel="stylesheet">


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        
      <a class="navbar-brand text-light fw-bold custom-font d-flex align-items-center" href="/">
    <img src="/images/logo.png" alt="SHOPPIZON Logo" class="logo">
    <span class="ml-2">SHOPIZON</span>
</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                   <li  class="nav-item active">
                    <a class="nav-link text-light" href="/">Home</a></li>
                <li class="nav-item active">
                    <a class="nav-link text-light" href="/products">Products <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="/cart">
                        Cart <span class="badge badge-success" id="cart-count">{{cartCount}}</span>
                    </a>
                </li>
                {{#if user}}
                <li class="nav-item">
                    <a class="nav-link text-light" href="/orders">Orders</a>
                </li>
                {{/if}}
            </ul>

            <!-- Dropdown for Account -->
            <div class="dropdown">
                <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   {{#if user}}
                        {{user.Name}}
                    {{else}}
                        Account
                    {{/if}}
                </button>
                <div class="dropdown-menu dropdown-menu-right bg-dark">
                    {{#if user}}
                        <a class="dropdown-item text-light" href="/logout">Logout</a>
                    {{else}}
                        <a class="dropdown-item text-light" href="/login">Login</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Custom CSS -->
<style>
      .logo {
        width: 70px;  /* Adjust width */
        height: 70px; /* Maintain aspect ratio */
    }
    .dropdown .btn {
    background-color: #222; /* Dark background */
    color: white;
    border: 1px solid #444;
    border-radius: 8px;
    font-weight: bold;
}

.dropdown .btn:hover {
    background-color: #333;
    border-color: #555;
}

 .custom-font {
    font-family: 'Cinzel', serif;
    font-size: 2rem;
    text-transform: uppercase;
}
    /* ðŸ”¹ Dark Navbar Styling */
    .navbar {
        background-color: #133e7f !important;
        padding: 15px;
    }

    /* ðŸ”¹ Navbar Links */
    .navbar-dark .navbar-nav .nav-link {
        color: white !important;
        font-weight: bold;
        transition: 0.3s;
    }

    .navbar-dark .navbar-nav .nav-link:hover {
        color: #00d4ff !important;
    }

    /* ðŸ”¹ Dropdown Menu */
    .dropdown-menu {
        border: 1px solid rgb(255, 221, 0);
    }

    .dropdown-item {
        transition: 0.3s;
    }

    .dropdown-item:hover {
        background: rgb(81, 123, 190);
    }

    /* ðŸ”¹ Cart Badge */
    .badge-success {
        background: #28a745;
