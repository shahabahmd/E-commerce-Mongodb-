<!-- Centered Login Form -->
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="container login-container p-4">
        <h2 class=" text-light fw-bold"> Login</h2>

        <form action="/login" method="POST">
            {{#if loginErr}}
            <p class="error-message ">{{loginErr}}</p>
            {{/if}}

            <div class="form-group text-left">
    <label for="email" class="text-light">Email address</label>
    <input type="email" class="form-control custom-input" name="Email" id="email" placeholder="Enter email" required>
</div>

<div class="form-group text-left">
    <label for="password" class="text-light">Password</label>
    <input type="password" class="form-control custom-input" name="Password" id="password" placeholder="Enter password" required>
</div>


            <div class="text-left">
    <a href="/signup" class="text-info">Create new account?</a>
</div>

            <button type="submit" class="btn btn-glow float-right"> Login</button>
        </form>
    </div>
</div>

