</section>

<!-- ‚úÖ JavaScript for Handling Cart Redirection -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll('.stars').forEach(star => {
        let rating = star.dataset.rating;
        let starsHtml = "‚≠ê".repeat(Math.round(rating)) + "‚òÜ".repeat(5 - Math.round(rating));
        star.innerHTML = starsHtml;
    });
});
    function handleAddToCart(productId) {
        // Check if the user is logged in
        const isLoggedIn = {{#if user}} true {{else}} false {{/if}};

        if (!isLoggedIn) {
            // Redirect to login page if user is not logged in
            window.location.href = "/login";
        } else {
            // Call the function to add the product to the cart
            addToCart(productId);
        }
    }

    function addToCart(productId) {
        // Example AJAX call to add the product to the cart
        fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Product added to cart!');
            } else {
                alert('Error adding product to cart.');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>


